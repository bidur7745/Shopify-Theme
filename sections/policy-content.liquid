<div class="policy-wrapper section-padding">
  <h1>{{ section.settings.heading }}</h1>
  <div class="policy-content">
    {{ section.settings.content }}
  </div>
</div>

{% schema %}
{
  "name": "Policy Content",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Policy Title",
      "default": "Policy"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Policy Content",
      "default": "<p>Enter your policy details here.</p>"
    }
  ]
}
{% endschema %} 